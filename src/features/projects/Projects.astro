---

<section id="projects" class="py-24 bg-slate-50 dark:bg-slate-900 relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-40 right-10 w-72 h-72 bg-purple-500 opacity-10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-10 w-80 h-80 bg-indigo-500 opacity-10 rounded-full blur-3xl"></div>
    <!-- Patrones de fondo (grid) -->
    <div class="absolute inset-0 bg-grid-slate-200/20 dark:bg-grid-slate-700/20 [mask-image:radial-gradient(white,transparent_85%)]"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Header con animación al entrar en viewport -->
    <div class="flex flex-col items-center mb-16 opacity-0 translate-y-4 transition-all duration-700 ease-out" 
         id="projects-header">
      <h2 class="text-5xl font-bold text-slate-800 dark:text-white mb-4">{projectsData.title}</h2>
      <div class="w-20 h-1 bg-indigo-600 rounded-full mb-8"></div>
      <p class="text-xl text-slate-600 dark:text-slate-300 text-center max-w-2xl">
        {projectsData.description}
      </p>
    </div>

    <!-- Filtros de categorías -->
    <div class="flex flex-wrap justify-center gap-3 mb-12 opacity-0 translate-y-4 transition-all duration-700 ease-out delay-300" id="projects-filters">
      {projectsData.categories.map((category, index) => (
        <button 
          class="px-5 py-2 rounded-full text-sm font-medium transition-all duration-300 data-[active=true]:bg-indigo-600 data-[active=true]:text-white bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 hover:bg-indigo-100 dark:hover:bg-indigo-900/30 shadow-md"
          data-category={category}
          data-active={index === 0 ? "true" : "false"}
        >
          {category}
        </button>
      ))}
    </div>

    <!-- Grid de proyectos -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16" id="projects-grid">
      {projects.map((project, index) => (
        <div 
          class="bg-white dark:bg-slate-800 rounded-xl shadow-xl overflow-hidden group transition-all duration-300 hover:shadow-2xl hover:shadow-indigo-500/10 opacity-0 translate-y-4" 
          data-category={project.category}
          style={`transition-delay: ${index * 100}ms`}
          id={`project-card-${index}`}
        >
          <!-- Imagen del proyecto -->
          <div class="relative overflow-hidden aspect-video">
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" 
            />
            {project.featured && (
              <div class="absolute top-4 right-4 bg-indigo-600 text-white text-xs font-bold px-3 py-1 rounded-full">
                Destacado
              </div>
            )}
          </div>
          
          <!-- Contenido del proyecto -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2">{project.title}</h3>
            <p class="text-slate-600 dark:text-slate-300 mb-4 line-clamp-3">{project.description}</p>
            
            <!-- Tecnologías usadas -->
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tech.map(tech => (
                <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-full text-xs">
                  {tech}
                </span>
              ))}
            </div>
            
            <!-- Enlaces -->
            <div class="flex gap-4">
              <a href={project.demoUrl} class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white text-center py-2 rounded transition-colors duration-300">
                Demo
              </a>
              <a href={project.codeUrl} class="flex-1 bg-white dark:bg-slate-700 border border-slate-200 dark:border-slate-600 hover:border-indigo-600 dark:hover:border-indigo-400 text-slate-700 dark:text-slate-300 text-center py-2 rounded transition-colors duration-300">
                Código
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Sección "Más proyectos" -->
    <div class="flex flex-col items-center opacity-0 translate-y-4 transition-all duration-700 ease-out delay-500" id="projects-more">
      <div class="p-8 md:p-10 bg-white dark:bg-slate-800 rounded-xl shadow-lg max-w-3xl w-full">
        <div class="flex flex-col md:flex-row items-center gap-6">
          <div class="bg-indigo-100 dark:bg-indigo-900/40 rounded-full p-6">
            <div class="text-4xl">💼</div>
          </div>
          <div class="flex-1 text-center md:text-left">
            <h3 class="text-2xl font-bold text-slate-800 dark:text-white mb-2">¿Quieres ver más proyectos?</h3>
            <p class="text-slate-600 dark:text-slate-300 mb-4">
              Visita mi repositorio en GitHub para explorar más trabajos y proyectos de código abierto.
            </p>
            <a href="#" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-6 py-3 bg-slate-800 dark:bg-slate-700 hover:bg-slate-900 dark:hover:bg-slate-600 text-white rounded-lg transition-colors duration-300">
              <span class="mr-2">Ver más en GitHub</span>
              <span>🐙</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

