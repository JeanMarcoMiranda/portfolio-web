<script>
  // Script para las animaciones y filtrado de proyectos
  document.addEventListener('DOMContentLoaded', () => {
    // Animaciones de entrada al cargar o hacer scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.remove('opacity-0');
          entry.target.classList.remove('translate-y-4');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });

    const elements = [
      document.getElementById('projects-header'),
      document.getElementById('projects-filters'),
      document.getElementById('projects-more')
    ];

    elements.forEach(el => {
      if (el) observer.observe(el);
    });

    // Animar las tarjetas de proyectos con un poco de retraso entre ellas
    const projectCards = document.querySelectorAll('[id^="project-card-"]');
    projectCards.forEach(card => {
      observer.observe(card);
    });

    // Funcionalidad para el filtrado de proyectos
    const filterButtons = document.querySelectorAll('[data-category]');
    const projectItems = document.querySelectorAll('#projects-grid > div');

    // Función para filtrar proyectos
    function filterProjects(category) {
      projectItems.forEach(item => {
        const itemCategory = item.getAttribute('data-category');
        
        // Si el filtro es "Todos" o coincide con la categoría del proyecto
        if (category === 'Todos' || category === itemCategory) {
          item.style.display = 'block';
          // Aplicar una animación de entrada sutil
          setTimeout(() => {
            item.classList.remove('opacity-0');
            item.classList.remove('translate-y-4');
          }, 50);
        } else {
          // Ocultar con una pequeña animación
          item.classList.add('opacity-0');
          item.classList.add('translate-y-4');
          setTimeout(() => {
            item.style.display = 'none';
          }, 300);
        }
      });
    }

    // Event listeners para los botones de filtro
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Cambiar el estado activo de los botones
        filterButtons.forEach(btn => btn.setAttribute('data-active', 'false'));
        button.setAttribute('data-active', 'true');
        
        // Filtrar proyectos
        const category = button.getAttribute('data-category');
        filterProjects(category);
      });
    });

    // Inicializar mostrando todos los proyectos
    filterProjects('Todos');
  });
</script>
