---
// Hero.astro
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

// Puedes personalizar estos datos seg√∫n tu informaci√≥n
const heroData = {
  name: "Jean Marco Miranda",
  title: "Desarrollador Fontend & Android",
  shortBio: "Creando experiencias digitales excepcionales con Astro, React y tecnolog√≠as modernas",
  ctaPrimary: {
    text: "Ver Proyectos",
    url: "/projects"
  },
  ctaSecondary: {
    text: "Cont√°ctame",
    url: "/contact"
  },
  // Reemplaza con tus perfiles reales
  socialLinks: [
    { name: "GitHub", url: "https://github.com/tuusuario", icon: "mdi:github" },
    { name: "LinkedIn", url: "https://linkedin.com/in/tuusuario", icon: "mdi:linkedin" },
    { name: "Twitter", url: "https://twitter.com/tuusuario", icon: "mdi:twitter" },
    { name: "Instagram", url: "https://instagram.com/tuusuario", icon: "mdi:instagram" },
  ],
  skills: ["HTML", "CSS", "Typescript", "React", "Astro", "Tailwind CSS", "Android", "Kotlin", "Jetpack Compose"]
};
---

<section class="relative min-h-screen flex items-center py-20 overflow-hidden bg-slate-50 dark:bg-slate-900">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute -top-24 -right-24 w-96 h-96 bg-indigo-500 opacity-10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-purple-600 opacity-10 rounded-full blur-3xl"></div>
    <div class="hidden lg:block absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full max-w-6xl">
      <div class="absolute inset-0 bg-[radial-gradient(50%_50%_at_50%_50%,rgba(99,102,241,0.1)_0%,rgba(99,102,241,0)_100%)]"></div>
    </div>
    <!-- Patrones de fondo (grid) -->
    <div class="absolute inset-0 bg-grid-slate-200/20 dark:bg-grid-slate-700/20 [mask-image:radial-gradient(white,transparent_85%)]"></div>
  </div>

  <div class="container mx-auto px-4 z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Columna izquierda: Contenido principal -->
      <div class="space-y-8 opacity-0 translate-y-8" id="hero-content">
        <!-- Saludo animado -->
        <div class="inline-block">
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium bg-indigo-100 dark:bg-indigo-900/50 text-indigo-800 dark:text-indigo-200 rounded-full mb-4">
            <span class="animate-pulse mr-2">üëã</span> ¬°Hola, bienvenido a mi portafolio!
          </span>
        </div>

        <!-- Nombre y t√≠tulo -->
        <div>
          <h1 class="text-5xl lg:text-7xl font-bold text-slate-800 dark:text-white mb-3">
            Soy <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600">{heroData.name}</span>
          </h1>
          <div class="flex items-center">
            <div class="h-1 w-10 bg-indigo-600 rounded-full mr-4"></div>
            <h2 class="text-2xl font-medium text-slate-600 dark:text-slate-300">{heroData.title}</h2>
          </div>
        </div>

        <!-- Descripci√≥n breve -->
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-lg leading-relaxed">
          {heroData.shortBio}
        </p>

        <!-- Botones de llamada a la acci√≥n -->
        <div class="flex flex-wrap gap-4">
          <a href={heroData.ctaPrimary.url} class="px-8 py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg shadow-lg hover:shadow-indigo-500/30 transition-all duration-300 flex items-center group">
            <span class="mr-2">{heroData.ctaPrimary.text}</span>
            <span class="transform group-hover:translate-x-1 transition-transform">‚Üí</span>
          </a>
          <a href={heroData.ctaSecondary.url} class="px-8 py-4 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 hover:border-indigo-600 dark:hover:border-indigo-400 text-slate-700 dark:text-slate-200 hover:text-indigo-600 dark:hover:text-indigo-400 font-medium rounded-lg shadow-lg hover:shadow-slate-200/50 dark:hover:shadow-slate-800/50 transition-all duration-300">
            {heroData.ctaSecondary.text}
          </a>
        </div>

        <!-- Redes sociales -->
        <div class="pt-4">
          <p class="text-sm text-slate-500 dark:text-slate-400 mb-3">Encu√©ntrame en:</p>
          <div class="flex space-x-4">
            {heroData.socialLinks.map(link => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="h-10 w-10 rounded-full bg-slate-50 dark:bg-slate-700/50 flex items-center justify-center text-slate-700 dark:text-slate-300 hover:bg-indigo-100 dark:hover:bg-indigo-800/30 transition-all"
                aria-label={`Visita mi perfil en ${link.name}`}
                title={link.name}
              >
                <Icon name={link.icon} class="w-6 h-6" />
              </a>
            ))}
          </div>
        </div>
      </div>
            
      <!-- Columna derecha: Imagen + elementos decorativos -->
      <div class="relative lg:h-[600px] opacity-0 translate-x-8" id="hero-image">
        <!-- Tarjeta principal con avatar -->
        <div class="absolute top-0 right-0 w-full md:w-5/6 h-4/5 bg-white dark:bg-slate-800 rounded-xl shadow-2xl overflow-hidden transform transition-all duration-500 hover:shadow-indigo-500/20 group z-10">
          <div class="absolute inset-0 bg-gradient-to-br from-slate-50 to-indigo-50 dark:from-slate-800 dark:to-slate-700 opacity-80"></div>
          <!-- Reemplaza esto con tu imagen real -->
          <div class="relative h-full w-full flex items-center justify-center">
            <div class="w-4/5 h-4/5 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center text-9xl">
              üë®‚Äçüíª
            </div>
          </div>
          
          <!-- Efecto hover decorativo -->
          <div class="absolute inset-0 border-4 border-transparent group-hover:border-indigo-400/30 rounded-xl transition-all duration-500"></div>
        </div>
        
        <!-- Tarjeta flotante de habilidades (decorativo) -->
        <div class="absolute bottom-0 -left-4 md:left-0 w-48 bg-white dark:bg-slate-800 rounded-lg shadow-xl p-4 z-20 transform transition-transform hover:scale-105">
          <h3 class="text-sm font-semibold text-slate-800 dark:text-white mb-2">Mis habilidades</h3>
          <div class="flex flex-wrap gap-1">
            {heroData.skills.map((skill, i) => (
              <span class="inline-block px-2 py-1 text-xs bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-full">{skill}</span>
            ))}
          </div>
        </div>
        
        <!-- Elemento decorativo: c√≠rculo con patr√≥n -->
        <div class="absolute top-8 -right-8 md:-right-4 lg:-right-6 w-24 h-24 bg-indigo-100 dark:bg-indigo-900/30 rounded-full flex items-center justify-center z-0">
          <div class="w-12 h-12 bg-indigo-200 dark:bg-indigo-800/50 rounded-full flex items-center justify-center">
            <div class="w-6 h-6 bg-indigo-400 dark:bg-indigo-600 rounded-full"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

